{% extends 'base.html.twig' %}

{% block title %}Documents{% endblock %}

{% block body %}
    <br>
    <div id="Body">
        <div class="container">
            <h1 id="titre">Documents</h1><br>
        </div>
        <div class="col-lg-12">
            <div class="row">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <tbody>
                            <tr class="align-middle text-center">
                                <th class="text-nowrap" id="slide">Référence du document</th>
                                <th class="text-nowrap" id="slide">Titre </th>
                                <th class="text-nowrap" id="slide">Date de fin de validation</th>
                            </tr>            
                            {% for Doc in showDoc %}
                                <tr class="align-middle text-center">
                                    <td class="text-nowrap" >{{Doc.ref_doc}}</td>
                                    <td class="text-nowrap" id="slide">{{ Doc.Titre }}</td>
                                    <td class="text-nowrap" id="slide">{{ Doc.date_fin_valid|date('Y-m-d H:i:s') }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>                            
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}